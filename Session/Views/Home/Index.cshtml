@inject IHttpContextAccessor httpContextAccessor
@{
    ViewData["Title"] = "Home Page";

    var loggedUser = ViewBag.LoggedUser as LoggedUser;
}

<div class="text-center">
    
    @if (loggedUser != null)
    {
        <h1>Hello, @loggedUser.Name</h1>
        <div>
            <div><strong>ID:</strong> @loggedUser.Id</div>
            <div><strong>DOB:</strong> @loggedUser.BirthDate.ToShortDateString()</div>
        </div>   

        <h3>Values From Session</h3>
        <div>
            <div><strong>Email:</strong> @httpContextAccessor.HttpContext!.Session.GetString("Email")</div>
            <div><strong>Age:</strong> @httpContextAccessor.HttpContext!.Session.GetInt32("UserAge")</div>
        </div>
    }

</div>
